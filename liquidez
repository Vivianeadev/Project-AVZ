    // Configurar provider pÃºblico para Polygon Mainnet
    provider = new ethers.providers.JsonRpcProvider('https://polygon-rpc.com');

    // Lista de tokens populares da Polygon para verificar sempre,
    // incluindo os tokens AVZ e AV9
    const popularPolygonTokens = [
