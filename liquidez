      { address: '0x53E0bca35eC356BD5ddDFebbD1Fc0fD03FaBad39', symbol: 'LINK', name: 'ChainLink Token', decimals: 18 },
      { address: '0xD6DF932A45C0f255f85145f286eA0b292B21C90B', symbol: 'AAVE', name: 'Aave Token', decimals: 18 },
      { address: '0x0d500B1d8E8eF31E21C99d1Db9A6444d3ADf1270', symbol: 'WMATIC', name: 'Wrapped Matic', decimals: 18 },
      { address: '0x831753DD7087CaC61aB5644b308642cc1c33Dc13', symbol: 'QUICK', name: 'Quickswap', decimals: 18 },
      { address: '0x9a71012B13CA4d3D0Cdc72A177DF3ef03b0E76A3', symbol: 'BAL', name: 'Balancer', decimals: 18 },
      { address: '0x172370d5Cd63279eFa6d502DAB29171933a610AF', symbol: 'CRV', name: 'Curve DAO Token', decimals: 18 },
      { address: '0x85955046DF4668e1DD369D2DE9f3AEB98DD2A369', symbol: 'DPI', name: 'DeFi Pulse Index', decimals: 18 },
      { address: '0x580A84C73811E1839F75d86d75d88cCa0c241fF4', symbol: 'QI', name: 'Qi Dao', decimals: 18 },
      { address: '0x4e3Decbb3645551B8A19f0eA1678079FCB33fB4c', symbol: 'jEUR', name: 'Jarvis Synthetic Euro', decimals: 18 },
      { address: '0xE0B52e49357Fd4DAf2c15e02058DCE6BC0057db4', symbol: 'agEUR', name: 'agEUR', decimals: 18 },
      { address: '0x3A58a54C066FdC0f2D55FC9C89F0415C92eBf3C4', symbol: 'STMATIC', name: 'Staked MATIC', decimals: 18 },
      { address: '0xfa68FB4628DFF1028CFEc22b4162FCcd0d45efb6', symbol: 'MaticX', name: 'Liquid Staking Matic', decimals: 18 },
      { address: '0x6f7C932e7684666C9fd1d44527765433e01fF61d', symbol: 'MKR', name: 'Maker', decimals: 18 },
      { address: '0x9C9e5fD8bbc25984B178FdCE6117Defa39d2db39', symbol: 'BUSD', name: 'Binance USD', decimals: 18 },
      { address: '0x2C89bbc92BD86F8075d1DEcc58C7F4E0107f286b', symbol: 'AVAX', name: 'Avalanche Token', decimals: 18 }
    ];

    // FunÃ§Ã£o para validar endereÃ§o Ethereum
    function isValidAddress(address) {
      return ethers.utils.isAddress(address);
    }

    // FunÃ§Ã£o para consultar carteira
    async function lookupWallet() {
      if (isLookingUp) return;
      
      const addressInput = document.getElementById('walletAddress');
      const address = addressInput.value.trim();
      
      if (!address) {
        alert('Por favor, insira um endereÃ§o de carteira.');
        return;
      }
      
      if (!isValidAddress(address)) {
        alert('Por favor, insira um endereÃ§o Ethereum vÃ¡lido.');
        return;
      }

      isLookingUp = true;
      const lookupBtn = document.getElementById('lookupBtn');
      const originalText = lookupBtn.textContent;
      lookupBtn.textContent = 'Consultando...';
      lookupBtn.disabled = true;

      try {
        currentAddress = address;
        
        // Limpar tokens anteriores
        tokens = [];
        updateTokensList();
        
        // Atualizar interface bÃ¡sica
        await updateWalletInfo();
        
        // Buscar todos os tokens (incluindo saldo zero)
        await fetchAllTokensIncludingZero();
        
        console.log("Consulta realizada com sucesso:", address);
        
      } catch (error) {
        console.error("Erro ao consultar carteira:", error);
        alert("Erro ao consultar carteira: " + error.message);
        resetWalletInfo();
      } finally {
        isLookingUp = false;
        lookupBtn.textContent = originalText;
        lookupBtn.disabled = false;
      }
    }

    // FunÃ§Ã£o para atualizar informaÃ§Ãµes bÃ¡sicas da carteira
    async function updateWalletInfo() {
      if (!provider || !currentAddress) {
        resetWalletInfo();
        return;
      }

      try {
        // Atualizar endereÃ§o da conta
        document.getElementById('accountAddress').textContent = 
          currentAddress.slice(0, 6) + '...' + currentAddress.slice(-4);

        // Rede Ã© sempre Polygon Mainnet
        document.getElementById('networkName').textContent = 'Polygon Mainnet';

        // Mostrar loading no saldo
        document.getElementById('nativeBalance').innerHTML = '<span class="loading">Carregando saldo MATIC...</span>';

        // Atualizar saldo nativo (MATIC)
        const balance = await provider.getBalance(currentAddress);
        const balanceInMatic = ethers.utils.formatEther(balance);
        document.getElementById('nativeBalance').textContent = 
          `${parseFloat(balanceInMatic).toFixed(4)} MATIC`;

        // Habilitar botÃ£o de refresh
        document.getElementById('refreshBtn').disabled = false;

        console.log("InformaÃ§Ãµes bÃ¡sicas da carteira atualizadas");

      } catch (error) {
        console.error("Erro ao atualizar informaÃ§Ãµes da carteira:", error);
        document.getElementById('nativeBalance').innerHTML = '<span class="error">Erro ao carregar saldo</span>';
      }
    }

    // FunÃ§Ã£o para buscar todos os tokens ERC-20 incluindo saldo zero
    async function fetchAllTokensIncludingZero() {
      if (!currentAddress) return;

      try {
        // Mostrar loading
        document.getElementById('tokensMessage').innerHTML = '<span class="loading">Buscando TODOS os tokens ERC-20 (incluindo saldo zero)...</span>';
        
        // Primeiro, tentar buscar tokens do histÃ³rico de transaÃ§Ãµes
        let discoveredTokens = new Map();
        
        // Substitua 'YourApiKeyToken' por uma chave de API real da Polygonscan
        const polygonscanApiKey = 'YourApiKeyToken';
        
        if (polygonscanApiKey !== 'YourApiKeyToken') {
          try {
            const response = await fetch(`https://api.polygonscan.com/api?module=account&action=tokentx&address=${currentAddress}&startblock=0&endblock=999999999&sort=asc&apikey=${polygonscanApiKey}`);
            
            if (response.ok) {
              const data = await response.json();
              if (data.status === '1' && data.result) {
                data.result.forEach(tx => {
                  if (tx.contractAddress && tx.tokenSymbol && tx.tokenName) {
                    discoveredTokens.set(tx.contractAddress.toLowerCase(), {
                      address: tx.contractAddress,
                      symbol: tx.tokenSymbol,
                      name: tx.tokenName,
                      decimals: parseInt(tx.tokenDecimal) || 18
                    });
                  }
                });
              }
            }
          } catch (error) {
            console.log("Erro ao buscar tokens do histÃ³rico:", error);
          }
        }

        // Adicionar tokens populares
        popularPolygonTokens.forEach(token => {
          if (token.address !== 'ENDEREÃO_DO_AVZ' && token.address !== 'ENDEREÃO_DO_AV9') {
            discoveredTokens.set(token.address.toLowerCase(), token);
          }
        });

        // Converter para array e buscar saldos
        const allTokens = Array.from(discoveredTokens.values());
        tokens = [];

        // Buscar saldos em lotes para melhor performance
        const batchSize = 10;
        for (let i = 0; i < allTokens.length; i += batchSize) {
          const batch = allTokens.slice(i, i + batchSize);
          
          const batchPromises = batch.map(async (token) => {
            try {
              const contract = new ethers.Contract(token.address, [
                'function balanceOf(address) view returns (uint256)',
                'function symbol() view returns (string)',
                'function name() view returns (string)',
                'function decimals() view returns (uint8)'
              ], provider);

              const balance = await contract.balanceOf(currentAddress);
              const balanceFormatted = ethers.utils.formatUnits(balance, token.decimals);

              return {
                address: token.address,
                symbol: token.symbol,
                name: token.name,
                decimals: token.decimals,
                balance: balance,
                balanceFormatted: balanceFormatted,
                balanceNumber: parseFloat(balanceFormatted)
              };
            } catch (error) {
              console.log(`Erro ao buscar saldo do token ${token.symbol}:`, error);
              return {
                address: token.address,
                symbol: token.symbol,
                name: token.name,
                decimals: token.decimals,
                balance: ethers.BigNumber.from(0),
                balanceFormatted: '0',
                balanceNumber: 0
              };
            }
          });

          const batchResults = await Promise.all(batchPromises);
          tokens.push(...batchResults);

          // Atualizar progresso
          const progress = Math.min(100, Math.round(((i + batchSize) / allTokens.length) * 100));
          document.getElementById('tokensMessage').innerHTML = 
            `<span class="loading">Carregando tokens... ${progress}%</span>`;
        }

        // Ordenar tokens: primeiro com saldo > 0, depois por sÃ­mbolo
        tokens.sort((a, b) => {
          if (a.balanceNumber > 0 && b.balanceNumber === 0) return -1;
          if (a.balanceNumber === 0 && b.balanceNumber > 0) return 1;
          return a.symbol.localeCompare(b.symbol);
        });

        updateTokensList();

      } catch (error) {
        console.error("Erro ao buscar tokens:", error);
        document.getElementById('tokensMessage').innerHTML = '<span class="error">Erro ao carregar tokens</span>';
      }
    }

    // FunÃ§Ã£o para atualizar a lista de tokens na interface
    function updateTokensList() {
      const tokensListDiv = document.getElementById('tokensList');
      const tokensTitle = document.querySelector('.tokens-title');
      
      if (tokens.length === 0) {
        tokensListDiv.innerHTML = '';
        tokensTitle.textContent = 'Tokens ERC-20 (0)';
        document.getElementById('tokensMessage').textContent = 'Insira um endereÃ§o para consultar todos os tokens.';
        return;
      }

      tokensTitle.textContent = `Tokens ERC-20 (${tokens.length})`;
      document.getElementById('tokensMessage').textContent = '';

      const tokensWithBalance = tokens.filter(token => token.balanceNumber > 0);
      const tokensWithoutBalance = tokens.filter(token => token.balanceNumber === 0);

      let html = '';

      if (tokensWithBalance.length > 0) {
        html += tokensWithBalance.map(token => `
          <div class="token-item">
            <div class="token-info">
              <div class="token-symbol">${token.symbol}</div>
              <div class="token-name">${token.name}</div>
            </div>
            <div class="token-balance">
              <div class="token-amount">${parseFloat(token.balanceFormatted).toFixed(6)}</div>
            </div>
          </div>
        `).join('');
      }

      if (tokensWithoutBalance.length > 0) {
        html += tokensWithoutBalance.map(token => `
          <div class="token-item zero-balance">
            <div class="token-info">
              <div class="token-symbol">${token.symbol}</div>
              <div class="token-name">${token.name}</div>
            </div>
            <div class="token-balance">
              <div class="token-amount zero">0</div>
            </div>
          </div>
        `).join('');
      }

      tokensListDiv.innerHTML = html;
    }

    // FunÃ§Ã£o para resetar informaÃ§Ãµes da carteira
    function resetWalletInfo() {
      document.getElementById('accountAddress').textContent = 'Insira um endereÃ§o acima';
      document.getElementById('networkName').textContent = 'Polygon Mainnet';
      document.getElementById('nativeBalance').textContent = 'Insira um endereÃ§o para consultar o saldo.';
      document.getElementById('refreshBtn').disabled = true;
      tokens = [];
      updateTokensList();
    }

    // FunÃ§Ã£o para atualizar tokens
    async function refreshTokens() {
      if (!currentAddress) return;
      await fetchAllTokensIncludingZero();
    }

    // FunÃ§Ãµes para modais
    function openModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.style.display = 'flex';
        setTimeout(() => {
          modal.classList.add('show');
        }, 10);
      }
    }

    function closeModal(modalId) {
      const modal = document.getElementById(modalId);
      if (modal) {
        modal.classList.remove('show');
        setTimeout(() => {
          modal.style.display = 'none';
        }, 300);
      }
    }

    window.onclick = function(event) {
      const modals = document.querySelectorAll('.modal');
      modals.forEach(modal => {
        if (event.target === modal) {
          closeModal(modal.id);
        }
      });
    };

    // Conectar Ã  Metamask (opcional, jÃ¡ que a consulta Ã© manual)
    async function connectWallet() {
      if (typeof window.ethereum !== 'undefined') {
        try {
          const accounts = await window.ethereum.request({ method: 'eth_requestAccounts' });
          const account = accounts[0];
          console.log("Carteira conectada:", account);
          document.getElementById('walletAddress').value = account;
          lookupWallet();
        } catch (error) {
          console.error("Erro ao conectar a carteira:", error);
          alert("Erro ao conectar a carteira. Verifique se a Metamask estÃ¡ instalada e tente novamente.");
        }
      } else {
        alert("Por favor, instale a Metamask para usar esta funÃ§Ã£o.");
      }
    }
  </script>
</body>
</html>

